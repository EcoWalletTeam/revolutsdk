# EditorConfig is awesome: https://EditorConfig.org
# It is cross-platform and cross-IDE tool which helps to keep some common configurations in one place.
root = true

[*]

indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[*.{java,kt}]
indent_size = 4
max_line_length = 120

[{*.yml,*.yaml}]
ij_continuation_indent_size = 2
ij_yaml_keep_indents_on_empty_lines = false
ij_yaml_keep_line_breaks = true